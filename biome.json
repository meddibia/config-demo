{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 88,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {}
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["**/*.{js,ts,jsx,tsx,html,css}"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
